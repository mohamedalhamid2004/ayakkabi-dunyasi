rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products - read by anyone, write by authenticated users (admin check in function)
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users - read/write by authenticated users (own data only)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders - read/write by authenticated users (own orders only)
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Returns - read/write by authenticated users
    match /returns/{returnId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
